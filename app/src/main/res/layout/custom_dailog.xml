<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Total Feed"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/totalfeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginLeft="7dp"
            android:inputType="numberDecimal"
            android:ems="5"
            android:gravity="center"/>
        <!-- android:background="@drawable/rounded_shape" -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="Kg"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="@string/ocf"
            android:textColor="@android:color/black"/>


        <EditText
            android:id="@+id/ocf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginLeft="7dp"
            android:inputType="number"
            android:ems="5"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="gm"
            android:textColor="@android:color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Feed Gap"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/feedgap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginLeft="7dp"
            android:inputType="number"
            android:ems="4"
            android:gravity="center"/>
        <!--  android:background="@drawable/rounded_shape" -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:textSize="15sp"
            android:text="min"
            android:textColor="@android:color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Total Time"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/total_time"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.7"
            android:layout_marginLeft="7dp"
            android:background="@drawable/roundedshape2"
            android:inputType="number"
            android:ems="7"
            android:gravity="center"/>
        <!--  android:background="@drawable/rounded_shape" -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:textSize="15sp"
            android:text="HH:mm"
            android:textColor="@android:color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Dispensed Feed"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/dispensedfeed"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.7"
            android:layout_marginLeft="7dp"
            android:ems="10"
            android:gravity="center"
            android:background="@drawable/roundedshape2"
            android:inputType="number"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="Kg"
            android:textColor="@android:color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="O.KG.Disp.Time"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/okdtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginLeft="7dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="sec"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <!-- <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15sp"
           android:id="@+id/tvstart"
           android:textColor="@android:color/black"/> -->

        <ImageButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
        <!--  <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:textSize="15sp"
               android:id="@+id/tvpause"

               android:textColor="@android:color/black"/> -->

        <ImageButton
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/last_update_time"
            android:textColor="@android:color/holo_blue_dark"/>
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#a4a4a4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:layout_marginRight="3dp">

        <Button
            android:id="@+id/group_basic_update"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:text="Update"
            android:gravity="center"
            android:background="@drawable/rounded_green"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@android:color/white"/>
    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#a4a4a4"/>

      <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:id="@+id/tvstatus"
            android:visibility="invisible"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="18sp"
            android:text="Past Schedule"
            android:id="@+id/p_schedule"
            android:visibility="invisible"
            android:textColor="@android:color/holo_blue_dark"/>


</LinearLayout>
</LinearLayout>